{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["esnext"],
        "baseUrl": ".",
        "paths": {
          "~/*": ["src/*"],
          "@/*": ["src/*"]
        },
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true
    },
    "include": ["**/*.ts", "config/robo.ts"],
    "exclude": ["node_modules", "dist"]
}