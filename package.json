{
  "name": "windswept",
  "version": "1.1.0",
  "description": "A production-grade Typescript Discord bot built to run on the newest tooling for a lovely, lightweight dev experience.",
  "main": "index.js",
  "scripts": {
    "docker": "docker compose -p windswept --file docker/docker-compose.yml",

    "db:start": "pnpm docker -- up -d",
    "db:stop": "pnpm docker -- down",
    "db:wipe": "pnpm docker -- down -v",
    "db:migrate": "doppler run -- pnpm prisma migrate deploy",
    "db:generate": "doppler run -- pnpm prisma generate",
    "db:studio": "doppler run -- pnpm prisma studio",

    "bot:build": "pnpm robo build",
    "bot:dev": "pnpm robo dev",
    "bot:start": "pnpm robo start",

    "dev": "pnpm run db:generate && doppler run -- pnpm run bot:start",
    "dev:lint": "biome lint . --max-diagnostics=1000 --config-path .config/biome.json",
    "dev:fix": "biome lint --write . --max-diagnostics=1000 --config-path .config/biome.json"
  },
  "keywords": [],
  "author": "jakemackie",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@types/node": "^24.2.0",
    "pg": "^8.16.3",
    "prisma": "^6.13.0",
    "rolldown": "^1.0.0-beta.31",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@swc/core": "^1.13.3",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "fast-average-color-node": "^3.1.0",
    "robo.js": "^0.10.30"
  }
}
