{
  "name": "windswept",
  "version": "1.0.0",
  "description": "A production-grade Typescript Discord bot built to run on the newest tooling for a lovely, lightweight dev experience.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "doppler run -- node dist/index.js",
    "stop": "docker compose down",
    "clean": "docker compose down -v",
    "dev": "npm run build && docker compose -f docker-compose.dev.yml up -d && npm run start",
    "dev:db": "docker compose -f docker-compose.dev.yml up -d",
    "dev:db:down": "docker compose -f docker-compose.dev.yml down",
    "dev:db:clean": "docker compose -f docker-compose.dev.yml down -v",
    "deploy": "doppler run -- node ./scripts/deploy-commands.js",
    "db:migrate": "doppler run -- npx prisma migrate dev",
    "db:generate": "doppler run -- npx prisma generate",
    "db:studio": "doppler run -- npx prisma studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.0.12",
    "prisma": "^6.11.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "discord.js": "^14.21.0",
    "dotenv": "^17.0.1"
  },
  "prisma": {
    "schema": "./prisma"
  }
}
