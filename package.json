{
  "name": "windswept",
  "version": "1.1.0",
  "description": "A production-grade Typescript Discord bot built to run on the newest tooling for a lovely, lightweight dev experience.",
  "main": "index.js",
  "scripts": {
    "build": "rolldown -c .config/rolldown.config.ts",
    "build:tsc": "tsc",
    "build:watch": "rolldown -c .config/rolldown.config.ts --watch",

    "start": "doppler run -- node dist/index.js",
    "compose": "docker compose -p windswept --file docker/docker-compose.yml",
    
    "stop": "npm run compose -- down",
    "clean": "npm run compose -- down -v",

    "dev:db": "npm run compose -- up -d",
    "dev:db:down": "npm run stop",
    "dev:db:clean": "npm run clean",

    "db:migrate": "doppler run -- npx prisma migrate deploy",
    "db:generate": "doppler run -- npx prisma generate",
    "db:studio": "doppler run -- npx prisma studio",

    "wait-for-db": "node ./.config/scripts/wait-for-db.js",
    "deploy": "doppler run -- node ./.config/scripts/deploy-commands.js",
    "dev": "npm run db:generate && npm run build && npm run dev:db && npm run wait-for-db && npm run db:migrate && npm run start",
    "start:dev": "node dist/index.js"
  },
  "keywords": [],
  "author": "jakemackie",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.2.0",
    "pg": "^8.16.3",
    "prisma": "^6.13.0",
    "rolldown": "^1.0.0-beta.31",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "fast-average-color-node": "^3.1.0"
  }
}
